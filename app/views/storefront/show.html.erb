<div class="container mt-5">
  <div class="row g-4 align-items-center">
    <div class="col-md-6">
      <!-- Modern Carousel -->
      <div id="productCarousel" class="carousel slide shadow rounded" data-bs-ride="carousel">
        <div class="carousel-inner rounded">
          <% @imagenes.each_with_index do |imagen, index| %>
            <div class="carousel-item <%= 'active' if index.zero? %>">
              <%= image_tag url_for(imagen), class: "d-block w-100", alt: @producto.nombre %>
            </div>
          <% end %>
        </div>
        <button class="carousel-control-prev bg-dark rounded-circle" type="button" data-bs-target="#productCarousel" data-bs-slide="prev" style="width: 35px; height: 35px; opacity: 0.85;">
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="visually-hidden">Anterior</span>
        </button>
        <button class="carousel-control-next bg-dark rounded-circle" type="button" data-bs-target="#productCarousel" data-bs-slide="next" style="width: 35px; height: 35px; opacity: 0.85;">
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="visually-hidden">Siguiente</span>
        </button>
        <div class="carousel-indicators">
          <% @imagenes.each_with_index do |imagen, index| %>
            <button type="button" data-bs-target="#productCarousel" data-bs-slide-to="<%= index %>" class="<%= 'active' if index.zero? %>" aria-current="<%= 'true' if index.zero? %>"></button>
          <% end %>
        </div>
      </div>
    </div>

    <div class="col-md-6">
      <div class="text-center">
        <h1 class="mb-4 display-5"><%= @producto.nombre %></h1>
        <p class="text-muted"><strong>Descripci√≥n:</strong> <%= @producto.descripcion %></p>
        <p class="text-success fs-4"><strong>Precio:</strong> $<%= @producto.precio_unitario %></p>
        <p class="text-warning fs-5"><strong>Stock:</strong> <%= @producto.stock_disponible > 0 ? @producto.stock_disponible : "Agotado" %></p>
        <a href="<%= storefront_index_path %>" class="btn btn-outline-secondary mt-3 px-4">Volver</a>
      </div>
    </div>
  </div>
</div>
